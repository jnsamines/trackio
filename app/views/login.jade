doctype html
html(lang='es')
    head
        meta(charset='utf-8')
        title=title
        link(rel='stylesheet', href='bower_components/normalize.css/normalize.css')
        link(rel='stylesheet', href='assets/stylesheet/trackio.css')
    body
        section.loginbox.container.center.radius
            header
                h1
                    a(href='#', title='Trackio') Trackio
            div
                form#formInicioSesion.clearfix(method='post', action='/login')
                    label(for='username') Usuario
                    input.large(type='text', name='username', id='username', placeholder='Nombre de Usuario', required)

                    label(for='password') Contraseña
                    input.large(type='password', name='password', id='password', placeholder='Contraseña', required)

                    span=message

                    input.button.medium.green.radius.right(type='submit', value='Iniciar Sesión')



